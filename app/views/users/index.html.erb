<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Address</th>
      <th>Description</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </head>

  <body>
    <% @users.each do |user| %>
      <p>
        <%= user.latitude %>
        <%= user.longitude %>
        <%= user.address %>
        <%= user.description %>
        <%= user.title %>
        <%= link_to 'Show', user %>
        <%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    <% end %>
  </body>
</div>

<br>


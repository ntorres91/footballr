<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Starts</th>
      <th>Ends</th>
      <th>Created By</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @event.title %></td>
        <td><%= @event.address %></td>
        <td><%= @event.starts_at %></td>
        <td><%= @event.ends_at %></td>
        <td><%= @event.user.username%></td>
      </tr>
  </tbody>
</table>
<% if @event.users.include?(current_user) %>
  <%= button_to 'Leave Game', event_leave_game_path(@event), data: { confirm: 'Are you sure you want leave?', disable_with: 'Leaving...' }  %>
<% else %>
  <%= button_to 'Join Game', event_join_game_path(@event), data: { disable_with: 'Joining...' } %>
<% end %>

<%= link_to "Back", dashboard_path %>
